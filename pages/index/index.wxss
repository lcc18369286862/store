/* pages/user/user.wxss */
.getLocation{
  margin: 15rpx 30rpx;
  font-size: 35rpx;
}
.search{
  width: 90%;
  margin-left: 3%;
  margin-top: 20rpx;
  padding: 1%;
  height: 45rpx;
  border-radius: 10rpx;
  left: 3%;
  background-color: #fff; 
}
.search_back{
  width: 100%;
  height: 100rpx;
  background-color: #ddd;
  /* position: fixed; */
}
.search>icon{
  margin-top: 5rpx;
  margin-left: 15rpx;
}
.search>text{
  position: absolute;
  font-size: 30rpx;
  width: 80%;
  left: 100rpx;
  bottom: 33rpx;
}
.mainImg{
  margin-top:100rpx; 
  width: 100%;
  height: 380rpx;
}
.main{
  width: 94%;
  margin-left: auto;
  margin-right: auto;
}
.bigText{
  font-size: 50rpx;
  font-weight: 900;
}
.sort_view{
  display: flex;
  /* justify-content: center;
  align-content: center; */
}
.sort_view>text{
  margin-right: 12rpx;
  margin-top: 8rpx;
  font-size: 30rpx;
}
#sort_text{
  margin-top: 0rpx;
  font-size: 36rpx;
  margin-right: 36rpx;
}
#filtrate{
  margin-top: 0rpx;
  font-size: 36rpx;
  position: absolute;
  right: 50rpx;
}
.shop{
  /* border: 1rpx solid black; */
  width: 100%;
  height: 250rpx;
  margin-top: 30rpx;
  display: flex;
}
.shop>view>image{
  width: 180rpx;
  height: 160rpx;
}
.shopInfo{
  position: absolute;
  left: 210rpx;
  width: 520rpx;
}
.shopInfo>view>.shopName{
  font-size: 37rpx;
  font-weight: 900;
}
.shopInfo>view>text{
  font-size: 28rpx;
}
.shopInfo>view>.grade{
  color: yellowgreen;
}
.shopInfo>view>.rightText{
  position: absolute;
  right: 5rpx;
  top: 63rpx;
}
.shopInfo>view>.tags{
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding: 5rpx;
  color: red;
  margin-right: 10rpx;
  font-size: 24rpx;
}