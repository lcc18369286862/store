/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.body{
  width: 94%;
  margin-left: 3%;
}

/* 弹出消息提示框 */
.showMessgae{
  display: flex;
  justify-content: center;
  align-items: center;
}
.showMessgae>view{
  position: fixed;
  z-index: 9999;
  border: 1rpx solid black;
  color: white;
  background-color: red;
  font-size: 30rpx;
  top: 500rpx;
  padding: 10rpx 20rpx;
}

/* 蒙层 */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9990;
  opacity: 0.5;
}
